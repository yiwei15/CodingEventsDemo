@model CodingEventsDemo.ViewModels.AddEventViewModel;

<h1>Add Event</h1>

<form asp-controller="Events" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail" />
        <span asp-validation-for="ContactEmail"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" />
        <span asp-validation-for="Location"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumOfAttendee">Number of Attendees</label>
        <input asp-for="NumOfAttendee" />
        <span asp-validation-for="NumOfAttendee"></span>
    </div>

    <div class="form-group">
        <label asp-for="RequireRegisteration">Registration required </label>
        <select asp-for="RequireRegisteration">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="RequireRegisteration"></span>
    </div>

    <input type="submit" value="Add Event" />
</form>
